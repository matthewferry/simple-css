{
  "name": "css",
  "version": "0.0.1",
  "description": "CSS building blocks for reusable web development",
  "main": "index.js",
  "scripts": {
    "build": "node helpers/fontsize-calc.js && postcss index.css -o dist/index.css",
    "compress": "postcss dist/index.css -u cssnano -o dist/index.min.css",
    "all-in-one": "npm run build && npm run compress",
    "test": "stylelint src/**/*.css index.css",
    "start": "npm run build && python -m SimpleHTTPServer"
  },
  "author": "Matthew Ferry",
  "license": "ISC",
  "devDependencies": {
    "cssnano": "^4.1.10",
    "normalize.css": "^5.0.0",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "6.5.0",
    "stylelint": "^7.8.0",
    "stylelint-order": "^0.4.4",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "stylelint-suitcss": "^1.0.0"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-preset-env": {
        "features": {
          "custom-media-queries": {
            "preserve": false
          }
        }
      }
    }
  }
}
